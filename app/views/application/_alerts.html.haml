- if flash.any?
  .container
    - flash.each do |name, msg|
      - cache [name, msg] do
        %div{class: "alert alert-dismissable alert-default alert-#{ name } fade in", role: 'alert'}
          %button.close{"data-dismiss" => "alert", type: "button"}
            %span{"aria-hidden" => "true"} &times;
            %span.sr-only Close
          = msg
