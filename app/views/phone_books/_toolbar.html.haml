- policy = policy(@phone_book || @team.phone_books.build)
- cache policy do
  .container.toolbar
    / General
    .btn-group.btn-group-sm
      = link_to iconify('All', :list), [@team, :phone_books], class: 'btn btn-default'
      
      - if policy.new?
        = link_to iconify('New', :new), new_team_phone_book_path(@team), class: 'btn btn-default'
  
      - if @phone_book && !@phone_book.new_record?
        - if policy.show?
          = link_to iconify('Details', :phone_book), @phone_book, class: 'btn btn-default'

        - if policy.edit?
          = link_to iconify('Edit', :edit), [:edit, @phone_book], class: 'btn btn-default'
        
    - if @phone_book && !@phone_book.new_record?
      - if policy(@phone_book).edit?
        / General
        .btn-group.btn-group-sm
          = phone_book.add_phone_book_entry_button( iconify('Add Phone Number', :phone_number) )

        = phone_book.add_phone_book_entry_modal