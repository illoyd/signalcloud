= form_for( @phone_book, :html => { :class => 'form-horizontal' } ) do |f|
  - if @phone_book.errors.any?
    #error_explanation
      %h2
        = pluralize(@phone_book.errors.count, "error")
        prohibited this phone_book from being saved:
      %ul
        - @phone_book.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :label, :class => 'control-label'
    .controls
      = f.text_field :label, { required: true }
      %help-inline Required

  .control-group
    = f.label :description, :class => 'control-label'
    .controls= f.text_area :description, :rows => 3

  .control-group
    .controls
      = f.submit :class => 'btn btn-primary'
      = link_to 'Discard changes', @phone_book, :class => 'btn'
