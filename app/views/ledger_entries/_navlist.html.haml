-# When viewing a ledger entry
- if @ledger_entry
  = navigation_list([ |
    { header: 'Related' }, |
    { label: 'View ' + item_label(@ledger_entry.item), icon: item_icon(@ledger_entry.item), link: [@organization, @ledger_entry.item], if: can?(:index, @ledger_entry.item) }, |
    { label: 'Ledger', icon: :ledger_entries, link: organization_ledger_entries_path(@organization), if: can?(:index, LedgerEntry) } |
    ]) |
- else
  - invoice_list = @organization.invoices.accessible_by(current_ability).map do |invoice|
    - { label: invoice.date_to.to_date.to_formatted_s(), icon: 'file', link: organization_invoice_path(@organization, invoice) }
  - invoice_list = [{ header: 'Invoices' }] + invoice_list unless invoice_list.empty?
    
  = navigation_list([ |
    { header: 'Entries' }, |
    { label: 'New entries (not in invoice)', icon: 'file-alt', link: organization_ledger_entries_path(@organization) }, |
    ] + invoice_list)
