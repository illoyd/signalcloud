/ Page Header
- titles 'User', "hello #{@user.first_name}", :user

/ Page body
.row
  .span3= render :partial => 'navlist'
  .span9
    %p
      %b Name:
      = "#{@user.first_name} #{@user.last_name}"
    %p
      %b E-mail:
      = mail_to @user.email
    %p
      %b Roles:
      %ul
      - @user.user_roles do |role|
        %li
          role.organization.label
          %ul
          - role.roles.each do |role|
            %li= role.to_s.humanize
