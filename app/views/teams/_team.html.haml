- cache [team, policy(team).show?, policy(team).edit?] do
  %tr
    %td= team.link_to
    %td= team.active_checkmark
    %td
      = team.owner.gravatar_image_tag(20, class: 'img-circle')
      = team.owner.link_to
    %td= team.description
    
    %td= link_to iconify('X', :conversations), [team, :conversations]
    %td= link_to iconify(team.phone_numbers.with_active_state.count, :phone_numbers), [team, :phone_numbers]
    %td= link_to iconify('X', :stencils),      [team, :stencils]
    %td= link_to iconify('X', :invoices),      [team, :invoices]
    
    %td.tools
      = team.show_button
      = team.edit_button
