= form_for( @organization, :html => { :class => 'form-horizontal' } ) do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :label, :class => 'control-label'
    .controls= f.text_field :label

  .control-group
    = f.label :account_plan, :class => 'control-label'
    .controls= f.collection_select :account_plan_id, AccountPlan.all, :id, :label

  .control-group
    .controls
      = f.submit :class => 'btn btn-primary'
      = link_to 'Discard changes', organization_path, :class => 'btn'