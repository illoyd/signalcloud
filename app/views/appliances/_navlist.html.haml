- if @appliance.new_record?  
  -# New object navigation list
  = navigation_list([ |
    { header: 'Related' }, |
    { label: 'All Appliances', icon: :appliances, link: appliances_path } |
    ]) |

- else
  -# Existing object navigation list
  = navigation_list([ |
    { header: 'Manage' }, |
    { label: 'Tickets', icon: :tickets, link: appliance_tickets_path( @appliance ) }, |
    { label: 'Details', icon: :show, link: @appliance }, |
    { label: 'Edit', icon: :edit, link: edit_appliance_path( @appliance ) }, |
    { label: 'Delete', icon: :delete, link: @appliance, options: { method: :delete, data: { confirm: 'Are you sure?' } }, if: can?(:destroy, @appliance) }, |
    { header: 'Related' }, |
    { label: 'All Appliances', icon: :appliances, link: appliances_path }, |
    { label: 'Phone Directory', icon: :phone_directories, link: @appliance.phone_directory } ]) |
