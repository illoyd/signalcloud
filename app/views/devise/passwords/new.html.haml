- headings('Reset', 'your password')

= devise_error_messages!
= form_for( resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "general" } ) do |f|
  .field{ has_error(resource, :email) }
    = f.label :email
    .inputs= f.email_field :email

  .actions
    = f.submit "Send reset password instructions"

= render "devise/shared/links"
