= form_for( @phone_directory, :html => { :class => 'form-horizontal' } ) do |f|
  - if @phone_directory.errors.any?
    #error_explanation
      %h2
        = pluralize(@phone_directory.errors.count, "error")
        prohibited this phone_directory from being saved:
      %ul
        - @phone_directory.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :label, :class => 'control-label'
    .controls= f.text_field :label
  .control-group
    = f.label :description, :class => 'control-label'
    .controls= f.text_area :description, :rows=>3
  .control-group
    .controls
      = f.submit :class => 'btn btn-primary'
      = link_to 'Discard changes', @phone_directory, :class => 'btn'
