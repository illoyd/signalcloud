<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Account sid</th>
    <th>Auth token</th>
    <th>Label</th>
    <th>Balance</th>
    <th>Account plan</th>
    <th>Encrypted twilio account sid</th>
    <th>Encrypted twilio auth token</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.auth_token %></td>
    <td><%= account.label %></td>
    <td><%= account.balance %></td>
    <td><%= account.account_plan.label %></td>
    <td><%= account.encrypted_twilio_account_sid %></td>
    <td><%= account.encrypted_twilio_auth_token %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

