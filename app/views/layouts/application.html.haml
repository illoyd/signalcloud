!!!
%html
  %head
    %title
      = yield(:title)
      = ' â€” ' if content_for?(:title)
      SignalCloud
    = stylesheet_link_tag "application", :media => "all"
    %link{href: "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel: "stylesheet"}/
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body{ id: yield(:page_section) }
  
    / Masthead
    = render 'masthead'

    / Breadcrumbs
    = render 'breadcrumbs'

    / Body
    #main
      .row
        #content
          = render 'header'
          = render 'messages'
          = yield
  
        - if content_for?(:sidebar)
          #sidebar
            = yield(:sidebar)

    / Footer
    #footer
      .row= render 'footer'
