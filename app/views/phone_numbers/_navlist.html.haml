- if @phone_number.new_record?
  -# New record
  = navigation_list([ |
    { header: 'Related' }, |
    { label: 'All Phone Numbers', icon: :phone_numbers, link: phone_numbers_path, if: can?(:index, PhoneNumber) } |
    ]) |

- else
  -# Existing record
  = navigation_list([ |
    { header: 'Manage' }, |
    { label: 'Details', icon: :show, link: @phone_number, if: can?(:show, @phone_number) }, |
    { label: 'Edit', icon: :edit, link: edit_phone_number_path( @phone_number ), if: can?(:edit, @phone_number) }, |
    { label: 'Delete', icon: :delete, link: @phone_number, options: { method: :delete, data: { confirm: 'Are you sure?' } }, if: can?(:destroy, @phone_number) }, |
    { divider: true }, |
    { label: 'All Phone Numbers', icon: :phone_numbers, link: phone_numbers_path, if: can?(:index, PhoneNumber) } |
    ]) |
