- cache policy(item) do
  %tr
    %td{'colspan' => 2}= item_counter + 1
    %td= render(item)
    %td
      = item.edit_with_modal
      = item.edit_modal
      = item.destroy_with_modal
      = item.destroy_modal

      - %w( ThenSendMessageClause ThenSetStatusClause ).each do |then_clause_class|
        - then_clause = ThenClauseDecorator.decorate( then_clause_class.constantize.new(if_clause: item) )
        = then_clause.new_with_modal(iconify(then_clause.name, :new))
        = then_clause.edit_modal

  = render(partial: 'then_clauses/then_clauses', object: item.then_clauses)    
