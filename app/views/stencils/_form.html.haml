= form_for @stencil do |f|
  = render partial: 'form_errors', object: @stencil.errors
    
  = f.hidden_field :team_id

  .form-group
    = f.label :name, class: 'control-label'
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :description, class: 'control-label'
    = f.text_area :description, class: 'form-control'

  .form-group
    = f.label :phone_book_id, class: 'control-label'
    = f.collection_select :phone_book_id, policy_scope(@team.phone_books).decorate, :id, :name, {}, { class: 'form-control' }

  .form-group
    = f.submit 'Save changes', class: 'btn btn-primary'
    = link_to 'Discard changes', @stencil.new_record? ? [@stencil.team, :stencils] : @stencil, class: 'btn btn-default'
