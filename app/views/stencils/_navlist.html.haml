- if @stencil.new_record?  
  -# New object navigation list
  = navigation_list([ |
    { header: 'Related' }, |
    { label: 'All Stencils', icon: :stencils, link: stencils_path, if: can?(:index, Stencil) } |
    ]) |

- else
  -# Existing object navigation list
  = navigation_list([ |
    { header: 'Manage' }, |
    { label: 'Start a new conversation', icon: :conversations, link: new_stencil_conversation_path( @stencil ), if: can?(:new, Conversation) }, |
    { label: 'Details', icon: :show, link: @stencil, if: can?(:show, @stencil) }, |
    { label: 'Edit', icon: :edit, link: edit_stencil_path(@stencil), if: can?(:edit, @stencil) }, |
    { label: 'Delete', icon: :delete, link: @stencil, if: can?(:destroy, @stencil), options: { method: :delete, data: { confirm: 'Are you sure?' } } }, |
    { header: 'Related' }, |
    { label: 'Conversations', icon: :conversations, link: stencil_conversations_path( @stencil ), if: can?(:index, Conversation) }, |
    { label: 'Phone Book', icon: :phone_books, link: @stencil.phone_book, if: can?(:show, @stencil.phone_book) }, |
    { divider: true }, |
    { label: 'All Stencils', icon: :stencils, link: stencils_path, if: can?(:index, Stencil) } |
    ]) |
